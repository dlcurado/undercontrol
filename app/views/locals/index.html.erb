<div id="filters">
  <%= form_tag(locals_path, method: "get") do %>
	<%= text_field_tag :nome_local, 'Nome do Local', class: "combo_autocomplete nome-local",
	 value: params[:nome_local].nil? ? 'Nome do Local' : params[:nome_local] %>
	<%= text_field_tag :nome_contato, 'Nome do Contato', class: "combo_autocomplete nome-contato-local",
	 value: params[:nome_contato].nil? ? 'Nome do Contato' : params[:nome_contato] %>
	<%= submit_tag "Filtrar" %>
  <% end %>
<div>

<br />

<div id="results">
  <table border='1'>
	  <tr>
		  <th>Nome</td>
		  <th>Nome do Contato</th>
		  <th>E-mail</th>
		  <th>Telefone</th>
		  <th>Detalhes</td>
		  <th>Editar</td>
		  <th>Desativar</td>
	  </tr>

	  <% @locais.each do |local| %>
		  <tr>
			  <td><%= local.nome %></td>
			  <td><%= local.nome_contato %></td>
			  <td><%= local.email %></td>
			  <td><%= local.telefone %></td>
			  <td><%= link_to 'Ver', local_path(local) %></td>
			  <td><%= link_to 'Editar', edit_local_path(local) %></td>
			  <td><%= link_to 'Desativar', local_path(local), 
					  method: :delete,
					  data: { confirm: 'Tem certeza que deseja excluir este local?' }  %></td>
		  </tr>
	  <% end %>
  </table>
</div>
